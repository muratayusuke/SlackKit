source 'https://github.com/CocoaPods/Specs.git'

use_frameworks!

target 'SlackKit OS X' do
	pod 'Starscream', '~> 2.0.2'
	pod 'Swifter', :git => 'https://github.com/pvzig/swifter.git', :tag => '3.0.4'
    pod 'RxSwift'
    pod 'RxCocoa'
end

target 'SlackKit iOS' do
	pod 'Starscream', '~> 2.0.2'
	pod 'Swifter', :git => 'https://github.com/pvzig/swifter.git', :tag => '3.0.4'
    pod 'RxSwift'
    pod 'RxCocoa'
end

target 'SlackKit tvOS' do
	pod 'Starscream', '~> 2.0.2'
	pod 'Swifter', :git => 'https://github.com/pvzig/swifter.git', :tag => '3.0.4'
    pod 'RxSwift'
    pod 'RxCocoa'
end
